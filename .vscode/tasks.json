{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Restart Next.js dev server",
			"type": "shell",
			"command": "pkill -f \"next dev\" || true; pnpm run dev",
			"isBackground": true,
			"group": "build"
		},
		{
			"label": "Typecheck Donation History page",
			"type": "shell",
			"command": "pnpm exec tsc -p tsconfig.json --noEmit",
			"isBackground": false,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "install-zxing-deps",
			"type": "shell",
			"command": "pnpm add @zxing/browser @zxing/library",
			"group": "build"
		}
	]
}